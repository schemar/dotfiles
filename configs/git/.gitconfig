[core]
  pager = delta
[alias]
  a = add -A
  b = branch
  bd = branch -d
  c = commit
  d = diff
  ds = diff --staged
  e = restore
  h = push
  l = log --pretty=short --max-count=10
  n = clean -fd src
  o = switch
  p = pull -p
  r = rebase
  s = status
[pull]
  rebase = true
[delta]
  syntax-theme = Catppuccin Macchiato
  line-numbers = true
[init]
  defaultBranch = main
[merge]
  tool = nvimdiff
[mergetool]
  keepBackup = false
[github]
  user = schemar
[log]
  follow = true
[includeIf "gitdir:*"]
  path = ~/.gitconfigprivate
[includeIf "gitdir:afilio*/"]
  path = ~/.gitconfigafilio
